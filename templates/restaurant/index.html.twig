{% extends 'base4.html.twig' %}
{% block title %}Réstaurants{% endblock %}
{% block body %}
        <div class="container-fluid mb-4" >
         <div class=" d-flex justify-content-between align-items-center">
                <h1>Réstaurants</h1>
                <a href="{{ path('add_restaurant') }}" class="btn btn-sm btn-primary">Ajouter</a>
        </div>
    </div>
      
      <div class ="table-responsive" style="max-height: 550px;overflow-y: scroll;">
        <table class="table  table-hover">
                   <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Link Map</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for restaurant in restaurants %}
                        <tr>
                            <td>{{ restaurant.nom }}</td>
                            <td>{{ restaurant.adresse }}</td>
                            <td>{{ restaurant.description }}</td>
                            <td><img src="{{ asset('images/' ~ restaurant.image) }}" alt="{{restaurant.image}}" width="77"
                                    height="50" class="fluid my-2 rounded"></td>
                            <td>{{ restaurant.linkMap }}</td>
                            <td>
                                <a href="{{ path('edit_restaurant',{id :restaurant.id,id2:restaurant.idr}) }}" class="btn btn-sm btn-warning" data-id="{{ restaurant.id }}">Modifier</a>
                                <a href="{{ path('restaurant_delete',{id :restaurant.id,id2:restaurant.idr}) }}" class="btn btn-sm btn-danger" data-id="{{ restaurant.id }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce restaurant ?')">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
{% endblock %}
