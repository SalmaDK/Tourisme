{% extends 'base4.html.twig' %}
{% block title %}Nouveautés{% endblock %}
{% block body %}
        <div class="container-fluid mb-4" >
         <div class=" d-flex justify-content-between align-items-center">
                <h1>Nouveautés</h1>
                <a href="{{ path('add_nouveaute') }}" class="btn btn-sm btn-primary">Ajouter</a>
        </div>
    </div>
      
      <div class ="table-responsive" style="max-height: 550px;overflow-y: scroll;">
        <table class="table  table-hover">
                  <thead>
                        <tr>
                            <th>Titre 1</th>
                            <th>Titre 2</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Date de publication</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for nouveaute in nouveautes %}
                        <tr>
                            <td>{{ nouveaute.titreU }}</td>
                            <td>{{ nouveaute.titreD }}</td>
                            <td>{{ nouveaute.description }}</td>
                            <td><img src="{{ asset('images/' ~ nouveaute.image) }}" alt="{{nouveaute.image}}" width="77"
                                    height="50" class="fluid my-2 rounded"></td>
                            <td>{{ nouveaute.datePub|date('Y-m-d') }}</td>
                            <td>
                            <a href="{{ path('edit_nouveaute', { id: nouveaute.id }) }}" class="btn btn-sm btn-warning" data-id="{{ nouveaute.id }}">Edit</a>
                            <a href="{{ path('nouveaute_delete',{id2:nouveaute.id}) }}" class="btn btn-sm btn-danger" data-id="{{ nouveaute.id }}" onclick="return confirm('Are you sure you want to delete this nouveaute?')">Delete</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
{% endblock %}
