{% extends 'base4.html.twig' %}
{% block title %}Hotels{% endblock %}
{% block body %}

<div class="container-fluid mb-4" >
         <div class=" d-flex justify-content-between align-items-center">
                <h1>Hotels</h1>
                <a href="{{ path('add_hotel') }}" class="btn btn-sm btn-primary">Ajouter</a>
            </div>
      </div>
      
      <div class ="table-responsive" style="max-height: 550px;overflow-y: scroll;">
      <table class="table  table-hover">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Link Map</th>
                            <th>Link Réservation</th>
                            <th>Nombre d'étoiles</th>
                            <th>Équipement</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for hotel in hotels %}
                        <tr>
                          <td>
                                <a href="{{ path('edit_hotel',{id :hotel.id,id2:hotel.idh}) }}" class="btn btn-sm btn-warning" data-id="{{ hotel.id }}">Modifier</a>
                                <a href="{{ path('hotel_delete',{id :hotel.id,id2:hotel.idh}) }}" class="btn btn-sm btn-danger" data-id="{{ hotel.id }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet hôtel ?')">Supprimer</a>
                            </td>
                            <td>{{ hotel.nom }}</td>
                            <td>{{ hotel.adresse }}</td>
                            <td>{{ hotel.description }}</td>
                            <td><img src="{{ asset('images/' ~ hotel.image) }}" alt="{{hotel.image}}" width="77"
                                    height="50" class="fluid my-2 rounded"></td>
                            <td>{{ hotel.linkMap }}</td>
                            <td>{{ hotel.linkRes }}</td>
                            <td>{{ hotel.nbretoile }}</td>
                            <td>{{ hotel.equipement }}</td>
                          
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                </div>
    
{% endblock %}
