                <span class="site-heading-lower">Chaque objet raconte une histoire</span>
            </h1>
        </header>
        <!-- Navigation-->
        
        <section class="page-section clearfix">
            {% for musee in musees %}

            <div class="container">
                <div class="intro">
                    <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="{{ asset('images/'~ musee.image) }}" alt="..." />
                    <div class="intro-text left-0 text-center bg-faded p-5 rounded">
                        <h2 class="section-heading mb-4">
                            <span class="section-heading-upper">Soyez le bienvenue chez </span>
                            <span class="section-heading-lower">{{ musee.nom }}</span>
                        </h2>
                        <p class="mb-3"> {{ musee.description }}</p>
                        <div class="intro-button mx-auto"><a class="btn btn-primary btn-xl" href="">Visit Us Today!</a></div>
                    </div>
                </div>
            </div>

        </section>
        {% endfor %}

