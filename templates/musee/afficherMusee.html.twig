{% extends 'base4.html.twig' %}
{% block title %}Musées{% endblock %}
{% block body %}
        <div class="container-fluid mb-4" >
         <div class=" d-flex justify-content-between align-items-center">
                <h1>Musées</h1>
                <a href="{{ path('add_musee') }}" class="btn btn-sm btn-primary">Ajouter</a>
        </div>
    </div>
      
      <div class ="table-responsive" style="max-height: 550px;overflow-y: scroll;">
        <table class="table  table-hover">
                   <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Link Map</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for musee in musees %}
                        <tr>
                            <td>{{ musee.nom }}</td>
                            <td>{{ musee.adresse }}</td>
                            <td>{{ musee.description }}</td>
                            <td><img src="{{ asset('images/' ~ musee.image) }}" alt="{{musee.image}}" width="77"
                                    height="50" class="fluid my-2 rounded"></td>
                            <td>{{ musee.linkMap }}</td>
                            <td>
                                <a href="{{ path('edit_musee',{id :musee.id,id2:musee.idm}) }}" class="btn btn-sm btn-warning" data-id="{{ musee.id }}">Modifier</a>
                                <a href="{{ path('musee_delete',{id :musee.id , id2:musee.idm}) }}" class="btn btn-sm btn-danger" data-id="{{ musee.id }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce musée ?')">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
{% endblock %}
